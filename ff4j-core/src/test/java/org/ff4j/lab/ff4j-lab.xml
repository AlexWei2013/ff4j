<ff4j xmlns="http://www.ff4j.org/schema/ff4j" 
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://www.ff4j.org/schema/ff4j ../../main/resources/ff4j-2.0.xsd">
	
	<autocreate>true</autocreate>
		
	<connections>
		
			<connection id="Cassandra-DEV">
				<technology>Cassandra</technology>
				<url>sdsd</url>
				<port>dsds</port>
				<user>....</user>
				<password>...</password>
			</connection>
			
	</connections>
		
	<security>
				<permission list="USE, EDIT, TOGGLE">
					<user>Pierre</user>
					<user>Paul</user>
					<user>Jacques<</user>
					<group>beta</group>
				</permission>
				<permission list="ADMIN">
					<user>Pierre</user>
				</permission>
	</security>
	
	<!-- Features -->	
	
	<featureStore>
			<targetStorage ref="Cassandra-DEV" />
			<url>....</url>
			<port>....</port>
			<audit>ElasticSearch</audit>
	</featureStore>
		
	<!-- Properties -->
	<propertyStore>
	</propertyStore>
	
	
	
	<features>
	
		<feature uid="AwesomeFeature" enable="true" description="some desc" />
	
		<feature uid="first" enable="true" description="description" owner="" >
			
			<accessControlList>
				<permission name="USE">
					<user>Pierre</user>
					<user>Paul</user>
					<user>Jacques<</user>
					<group>beta</group>
				</permission>
			</accessControlList>
			
			<custom-properties>
			  <property name="ppint" 	  type="org.ff4j.property.PropertyInt" value="12"   />
			  <property name="ppdouble"   type="double"  value="12.5" />
			  <property name="ppboolean"  type="boolean" value="true" />
			  <property name="ppstring"   value="hello" />
			  <property name="ppListInt"  value="12,13,14" />
			  <property name="myLogLevel" value="DEBUG" type="org.ff4j.property.PropertyLogLevel" />
			  <property name="digitValue" value="1" type="org.ff4j.property.PropertyInt">
			  	<fixedValues>
			 		<value>0</value>
			 		<value>1</value>
			 		<value>2</value>
			 		<value>3</value>
			 	</fixedValues>
			  </property>
			  <property name="regionIdentifier" value="AMER" >
			 	<fixedValues>
			 		<value>AMER</value>
			 		<value>SSSS</value>
			 		<value>EAST</value>
			 		<value>EAST</value>
			 	</fixedValues>
			 </property>
			</custom-properties>
		</feature>
		
		<feature-group name="GRP0">
			<feature uid="second" enable="false" description="description" >
				<security>
					<role name="USER" />
				</security>
			</feature>
		</feature-group>
		
		<feature-group name="GRP1">
			<feature uid="forth" enable="true" description="description" >
				<flipstrategy class="org.ff4j.strategy.PonderationStrategy">
					<param name="weight" value="1"/>
				</flipstrategy>
				<security>
					<role name="ADMINISTRATOR" />
					<role name="BETA-TESTER" />
				</security>
			</feature>
			<feature uid="third" enable="false" >
				<security>
					<role name="ADMINISTRATOR" />
					<role name="BETA-TESTER" />
				</security>
			</feature>
		</feature-group>
	
	</features>
	
	<properties>	
	
	 <property name="a" value="AMER" >
	 	<fixedValues>
	 		<value>AMER</value>
	 		<value>EAST</value>
	 		<value>EAST</value>
	 		<value>EAST</value>
	 	</fixedValues>
	 </property>
	 
	 <property name="b" 	  value="12"   />
	
	 <property name="c"   value="12.5" />
	
	 <property name="d"  value="true" />
	
	 <property name="e"   value="hello" />
	
	 <property name="f"  value="12,13,14" />
	
	 <property name="g" value="DEBUG" type="org.ff4j.property.PropertyLogLevel" />

	</properties>
	
	
</ff4j>